<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="#000000"
            android:indeterminateTintMode="src_atop" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ann_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/announctment_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIBIBIBI"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/announctment_courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="資料結構"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/announctment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="2023/9/1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/announctment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="fdasffff"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>